        )
        +setting-card(
          "truck",
          "Vận chuyển",
          "Cấu hình giá và phương thức vận chuyển"
        )
        +setting-card(
          "truck-fast",
          "Hãng vận chuyển",
          "Thiết lập hãng vận chuyển"
        )

  div(class="kt-card mt-6")
    div(class="kt-card-header")
      div(class="kt-card-heading")
        h2(class="kt-card-title") Tiền tệ
      div(class="kt-card-toolbar")
