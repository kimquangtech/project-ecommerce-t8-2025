{
     "compilerOptions": {
          "target": "es2017", // cho phép biên dịch code Typescript sang kiểu ES6
          "module": "commonjs", // CommonJS là tiêu chuẩn được sử dụng trong Node.js để làm việc với các module
          "moduleResolution": "node", // Hỗ trợ import module từ node_modules
          "removeComments": true, // xóa comments khi biên dịch sang file js,
          "esModuleInterop": true, // Dùng được từ khóa import thay cho require
          "outDir": "dist",
          "rootDir": "./",
          "resolveJsonModule": true, // Cho phép import file JSON
          "strict": true,
     },
     "include": [
          "**/*.ts"
     ],
     "exclude": [
          "node_modules",
          "dist"
     ]
}